<div class="session-container row">
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="col-md-5">
    <div class="session-inner border">
      <h2 class="session-title">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-box-width" %>
      </div>
      <div class="form-field">
        <%= f.label :first_name, "苗字" %> <br />
        <%= f.text_field :first_name, class: "border" %>
      </div>
      <div class="form-field">
        <%= f.label :last_name, "名前" %> <br />
        <%= f.text_field :last_name, class: "border" %>
      </div>
      <div class="form-field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-box-width" %>
      </div>
      <div class="session-bottom">
        <div class="form-actions">
          <%= f.submit "登録", class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
      <div class="form-link">
        <%= render "devise/shared/links" %>
      </div>
      </div>
    </div>
  </div>
</div>
